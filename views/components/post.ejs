<% for(i = posts.length-1 ; i >= 0 ; i--){ %>
<div class="autodiv">

    <a href="/post/id/<%= posts[i].id %>" style="width:260px;word-break:break-all; word-wrap:break-word;">
        <font size="4px" color=#07c02f>
            <%= posts[i].title %>
        </font>
    </a>

    <br><br>

    <div class="autodiv2">
        <%- posts[i].content.replace(/\n/g, '<br/>') %>
    </div>

    <br>
    <font size="2px" color=#888888>
        <%= posts[i].updatetime %>
    </font>
    <div style="float: right;margin-right: 0;">
        <a href="/up/<%= posts[i].id %>">
            <font size="2px" color=#888888>点赞(<%= posts[i].nup %>)</font>
        </a>
        <a href="/post/id/<%= posts[i].id %>">
            <font size="2px" color=#888888>留言(<%= posts[i].nme %>)
            </font>
        </a>
        <% if (user === posts[i].author && title === '查看文章') { %>
        &nbsp
            <span class="ui inline dropdown" style="float:right">
                <div class="arrow_down"></div>
                <div class="menu" style="background-color:rgba(255, 255, 255, 0.7);">
                    <a class="item" href="/post/edit/<%= posts[i].id %>">编辑</a>
                    <a class="item" href="/post/remove/<%= posts[i].id %>">删除</a>
                </div>
            </span>
            <% } %>
    </div>
    <br>
    <div >
        <a href="/post/<%= posts[i].author %>"><span>
                <font size="2px" color=#888888>by:<%= posts[i].showname %>
                </font>
            </span>
        </a>
    </div>
</div>
<br />
<% } %>