<% for(i = posts.length-1 ; i >= 0 ; i--){ %>
<div class="autodiv">
    <h3 style="color: rgba(65, 170, 5, 0.829);"><%= posts[i].title %></h3>
      <p style="width:280px;word-break:break-all; word-wrap:break-word;">
        <%- posts[i].content.replace(/\n/g, '<br/>') %>
        </p>
        <p>
            <font size="2px" color=#888888>
                <%= posts[i].updatetime %>
                </font>
                <a style="float: right;margin-right: 0;" href="/me/<%= posts[i].id %>">
                    <font size="2px" color=#888888>留言(<%= posts[i].nme %>)
                </font>
                </a>

                <a style="float: right;margin-right: 0;" href="/up/<%= posts[i].id %>">
                    <font size="2px" color=#888888>点赞(<%= posts[i].nup %>)&nbsp&nbsp</font>
                </a>
                <br>
                <font size="2px" color=#888888>
                    by:<%= posts[i].showname %>
                </font>
        </p>
</div>
<br />
<% } %>